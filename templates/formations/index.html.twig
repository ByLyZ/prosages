{% extends 'base.html.twig' %}

{% block titreContenu %}
<div class="example-wrapper">
    <h3>Liste des formations</h3>
</div>
{% endblock %}
{% block contenu %}
<table class="table">
    <thead>
        <tr>
            <th>
                Formations
            </th>
        </tr>
    </thead>
    {% for formationCourante in formations %}
    <tbody>
        <tr>
            <td>
                <ul>
                    <li>
                        <a href="{{path('formations_stages',{id:formationCourante.id})}}">{{formationCourante.nom}}</a>
                    </li>
                </ul>
            </td>
        </tr>
    </tbody>
    {% endfor %}
</table>
</div>
{% endblock %}